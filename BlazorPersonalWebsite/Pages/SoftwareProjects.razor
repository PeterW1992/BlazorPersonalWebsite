@page "/softwareprojects"

@using BlazorPersonalWebsite.Models
@using BlazorPersonalWebsite.Models.Interfaces
@inject ISoftwareProjectRepository SoftwareProjectRepo 

<h3>Software Projects</h3>

<ul>
    @foreach (var project in projects.OrderByDescending(p => p.DateCreated))
    {
    <li>@project.Name - @project.DateCreated.ToString("dd/MM/yyyy")</li>
        
    }
</ul>

@code {
    private List<SoftwareProject> projects;

    protected override async Task OnInitializedAsync()
    {
        projects = SoftwareProjectRepo.ListSoftwareProjects();
    }
}
