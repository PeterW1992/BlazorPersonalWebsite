@page "/softwareproject"

@if (project == null)
{
    <label>Error display product!</label>
}
else
{
<div class="project">

    <div>
        <h2>@project.Name</h2>
    </div>

    <div id="imageCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#imageCarousel" data-slide-to="1"></li>
            <li data-target="#imageCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @foreach (var projectImage in project.Images)
            {
                <div class="carousel-item">
                    <img class="projectImage" src="@projectImage" />
                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a id="imageCarousel-prev" class="left carousel-control" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a id="imageCarousel-next" class="right carousel-control" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    




</div>
}
