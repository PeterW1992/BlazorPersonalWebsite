@page "/softwareproject"

@if (project == null)
{
    <label>Error display product!</label>
}
else
{
<div class="project">

    <div>
        <h2>@project.Name</h2>
    </div>

    <div id="imageCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @for (int i = 0; i < project.Images.Count; i++)
            {
                <li data-target="#imageCarousel" data-slide-to="@i" class="@(i == 0) ? "active" : null></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @foreach (var projectImage in project.Images)
            {
                <div class="carousel-item">
                    <img class="d-block w-50" src="@projectImage" />
                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a id="imageCarousel-prev" class="left carousel-control" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a id="imageCarousel-next" class="right carousel-control" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
}
